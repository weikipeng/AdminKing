<?xml version="1.0" encoding="utf-8"?>
<com.beardedhen.androidbootstrap.BootstrapWell
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:visibility="visible"
    app:bootstrapSize="xl"
    tools:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/userName"
            style="@style/EditText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/bootstrap_brand_warning"
            android:visibility="visible"
            app:bootstrapBrand="info"
            app:bootstrapSize="lg"
            app:roundedCorners="true"
            app:showOutline="false"
            tools:text="30"/>

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/password"
            style="@style/EditText"
            android:layout_alignParentRight="true"
            android:layout_below="@id/userName"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/bootstrap_brand_warning"
            android:visibility="visible"
            app:bootstrapBrand="info"
            app:bootstrapSize="lg"
            app:roundedCorners="true"
            app:showOutline="false"
            tools:text="30"/>


        <com.beardedhen.androidbootstrap.AwesomeTextView
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/userName"
            android:layout_alignTop="@id/userName"
            android:layout_toLeftOf="@id/userName"
            android:layout_toStartOf="@id/userName"
            android:text="用户名："/>


        <com.beardedhen.androidbootstrap.AwesomeTextView
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/password"
            android:layout_alignTop="@id/password"
            android:layout_toLeftOf="@id/password"
            android:layout_toStartOf="@id/password"
            android:text="密\u0020\u0020\u0020\u0020码："/>
        <!--android:text="用\u0020\u0020\u0020\u0020名："-->
        <!--android:background="#66006600"-->

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/password"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:text="登录"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false"/>

    </RelativeLayout>

</com.beardedhen.androidbootstrap.BootstrapWell>
